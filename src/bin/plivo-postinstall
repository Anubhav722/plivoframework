#!/usr/bin/env python

def postinstall():
    import sys
    prefix = sys.prefix
    # set plivo script
    f = open(prefix + '/bin/plivo', 'r')
    buff = f.read()
    f.close()
    new_buff = buff.replace('PREFIX=@PREFIX@', 'PREFIX='+prefix)
    f = open(prefix + '/bin/plivo', 'w')
    f.write(new_buff)
    f.close()

if __name__ == '__main__':
    postinstall()
    print "Plivo postinstall done"
